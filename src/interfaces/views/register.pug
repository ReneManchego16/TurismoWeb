extends layout

block content

  .container
    .row.justify-content-center
      .col-md-6
        link(rel="stylesheet" href="/styles/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        h2 Regístrate
        p Crea una cuenta para comenzar a usar nuestra plataforma.
        form(action='/register' method='POST' enctype='multipart/form-data')
          .form-group
            label(for='name') Nombre
            input.form-control(type='text' id='name' name='name' placeholder='Ingresa tu nombre' required)
          
          .form-group
            label(for='email') Correo electrónico
            input.form-control(type='email' id='email' name='email' placeholder='ejemplo@dominio.com' required)
          
          .form-group
            label(for='password') Contraseña
            input.form-control(type='password' id='password' name='password' placeholder='Contraseña' required)
          
          .form-group
            label(for='travelerType') Tipo de viajero
            select.form-control(id='travelerType' name='travelerType' required)
              option(value='') Selecciona tu tipo de viajero
              option(value='adventure') Aventura
              option(value='family') Familiar
              option(value='business') Negocios
              option(value='romantic') Romántico

          .form-group
            label(for='avatar') Foto de perfil
            input.form-control-file(type='file' id='avatar' name='avatar' )
          
          button.btn.btn-success(type='submit') Registrarse
